# Performance optimizations for Apache servers

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# URL Encryption Redirect Rules
# Redirect all plain URLs to encrypted URLs

# Enable rewrite engine
RewriteEngine On

# Admin panel routing - handle admin routes separately
RewriteCond %{REQUEST_URI} ^/admin/?$ [NC]
RewriteRule ^admin/?$ /index.html [L]

RewriteCond %{REQUEST_URI} ^/admin/ [NC]
RewriteCond %{REQUEST_FILENAME} !-f [NC]
RewriteCond %{REQUEST_FILENAME} !-d [NC]
RewriteRule ^admin/(.*)$ /index.html [L]

# Don't redirect if already accessing encrypted URL or API routes
RewriteCond %{REQUEST_URI} ^/e/ [NC]
RewriteRule ^ - [L]

# Handle API routes - proxy to backend (for production)
RewriteCond %{REQUEST_URI} ^/bak/ [NC]
RewriteRule ^bak/(.*)$ https://khwanzay.school/bak/$1 [P,L]

# Don't redirect admin routes to encrypted versions
RewriteCond %{REQUEST_URI} !^/e/ [NC]
RewriteCond %{REQUEST_URI} !^/admin/ [NC]
RewriteCond %{REQUEST_URI} !^/bak/ [NC]
RewriteCond %{REQUEST_FILENAME} !-f [NC]
RewriteCond %{REQUEST_FILENAME} !-d [NC]

# For specific routes, redirect to encrypted versions
RewriteRule ^about/?$ /e/about [R=301,L]
RewriteRule ^about/([^/]+)/?$ /e/about/$1 [R=301,L]
RewriteRule ^what-we-do/?$ /e/what-we-do [R=301,L]
RewriteRule ^what-we-do/([^/]+)/?$ /e/what-we-do/$1 [R=301,L]
RewriteRule ^programs/([^/]+)/?$ /e/programs/$1 [R=301,L]
RewriteRule ^projects/([^/]+)/?$ /e/projects/$1 [R=301,L]
RewriteRule ^resources/?$ /e/resources [R=301,L]
RewriteRule ^resources/([^/]+)/?$ /e/resources/$1 [R=301,L]
RewriteRule ^contact/?$ /e/contact [R=301,L]
RewriteRule ^donation/?$ /e/donation [R=301,L]
RewriteRule ^volunteer/?$ /e/volunteer [R=301,L]
RewriteRule ^gallery/([^/]+)/?$ /e/gallery/$1 [R=301,L]
RewriteRule ^blog-([^/]+)/?$ /e/blog-$1 [R=301,L]
RewriteRule ^search/?$ /e/search [R=301,L]

# Enhanced security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# MIME types for web fonts
AddType application/font-woff .woff
AddType application/font-woff2 .woff2
AddType application/vnd.ms-fontobject .eot
AddType application/x-font-ttf .ttf
AddType font/opentype .otf
AddType image/svg+xml .svg

# Handle service worker
<FilesMatch "sw\.js$">
    AddType application/javascript .js
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
</FilesMatch>

# Prevent access to sensitive files
<FilesMatch "\.(env|log|md)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Cache control with optimized headers
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/ico "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# Cache control headers
<IfModule mod_headers.c>
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    <FilesMatch "\.(html)$">
        Header set Cache-Control "public, max-age=3600"
    </FilesMatch>
    
    # Disable ETags for better caching
    Header unset ETag
    FileETag None
    
    # Enable keep-alive
    Header set Connection keep-alive
</IfModule>

# SPA (Single Page Application) routing - catch all other routes and serve index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/admin/ [NC]
RewriteCond %{REQUEST_URI} !^/e/ [NC]
RewriteCond %{REQUEST_URI} !^/bak/ [NC]
RewriteRule ^(.*)$ /index.html [L,QSA]
